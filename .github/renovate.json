{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "prHourlyLimit": 0,
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "torch*"
            ],
            "enabled": false
        },
        {
            "matchDatasources": [
                "pypi"
            ],
            "matchPackageNames": [
                "diffusers"
            ],
            "enabled": true,
            "groupName": "huggingface-diffusers"
        },
        {
            "matchDatasources": [
                "pypi"
            ],
            "matchPackageNames": [
                "transformers"
            ],
            "enabled": true,
            "groupName": "huggingface-transformers"
        }
    ]
}